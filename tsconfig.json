{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "es2021",
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "outDir": "dist",
        "rootDir": "src",
        "resolveJsonModule": true
    },
    "include": ["./src"]
}
